{
	"crop.json": "crop.json",
	"site.json": "site.json",
	"climate.csv": "climate.csv",

	"climate.csv-options": {
		"start-date": "1991-01-01",
		"end-date": "1997-12-31",

		"no-of-climate-file-header-lines": 1,
		"csv-separator": ",",
		"header-to-acd-names": {
			"DE-date": "de-date"
		}
	},
	
	"debug?": false,
	"path-to-output": "./",
	"include-file-base-path": "./",
	
	"output": { 
	  "write-file?": false,
		"file-name": "out.csv",
	
		"csv-options": {
			"include-header-row": true,
			"include-units-row": true,
			"csv-separator": ","
		},

		"events": [
			"yearly", [
				"Year", ["SOC|SOCtop", [1, 3, "AVG"], "AVG"], ["SOC|SOCbottom", [4, 20, "AVG"], "AVG"], ["NO3", [1, 5, "SUM"], "AVG"], ["NH4", [1, 5, "SUM"], "AVG"], ["NLeach", "SUM"], ["Rh", "SUM"]
			],

			"harvesting",[
				"Yield"
			]		
		]
	},

	"NumberOfLayers": 20,
	"LayerThickness": [0.1, "m"],

	"UseSecondaryYields": false,
	"NitrogenResponseOn": true,
	"WaterDeficitResponseOn": true,
	"EmergenceMoistureControlOn": false,
	"EmergenceFloodingControlOn": false,

	"UseAutomaticIrrigation": true,
	"AutoIrrigationParams": {
		"irrigationParameters": {
			"nitrateConcentration": [0, "mg dm-3"],
			"sulfateConcentration": [0, "mg dm-3"]
		},
		"amount": [10, "mm"],
		"threshold": 0.9
	},

	"UseNMinMineralFertilisingMethod": true,
	"NMinUserParams": { "min": 20, "max": 110, "delayInDays": 20 },
	"NMinFertiliserPartition": ["include-from-file", "monica-parameters/mineral-fertilisers/AN.json"],
	"JulianDayAutomaticFertilising": 89
}
